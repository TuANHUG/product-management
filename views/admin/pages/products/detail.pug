extends ../../layouts/default.pug 

block main 
  if (product.title)
    h1(class="mb-4") #{product.title}

  if (product.price)
    div(class="mb-4") Giá: #{product.price}

  if (product.discountPercentage)
    div(class="mb-4") Giảm giá: #{product.discountPercentage}%

  if (product.stock)
    div(class="mb-4") Còn lại #{product.stock} sản phẩm

  if (product.thumbnail)
    div(class="mb-4") 
      img(
        src=product.thumbnail, 
        alt=product.title, 
        width="100px", 
        height="auto"
      )
  
  if(product.status)
    div(class="mb-4") 
      span Trạng thái 
        if (product.status === 'active')
          span(class="badge bg-success") Hoạt động
        else if (product.status === 'inactive')
          span(class="badge bg-danger") Dừng hoạt động

  if (product.position)
    div(class="mb-4") Vị trí #{product.position}


  if (product.description)
    div(class="mb-4") #{product.description}

  a(class ="btn btn-warning" href=`${prefixAdmin}/product/edit/${product._id}`) Chỉnh sửa 
  script(src="/admin/js/product.js")

